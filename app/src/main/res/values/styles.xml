<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorNavbarBackground</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/colorNavbarBackground</item>
        <item name="itemBackground">@color/colorNavbarBackground</item>
        <item name="itemIconTint">@color/colorNavbarText</item>
        <item name="itemTextColor">@color/colorNavbarActive</item>
        <item name="labelVisibilityMode">unlabeled</item>

    </style>

    <style name="buttonPrimary">
        <item name="android:height">@dimen/big_button_height</item>
        <item name="android:width">@dimen/big_button_width</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">@dimen/button_padding_start</item>
        <item name="android:paddingEnd">@dimen/button_padding_end</item>
        <item name="android:drawableEnd">@drawable/ic_arrow</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="buttonPrimarySmall">
        <item name="android:height">@dimen/small_button_height</item>
        <item name="android:width">@dimen/small_button_width</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">@dimen/button_padding_start</item>
        <item name="android:paddingEnd">@dimen/button_padding_end</item>
        <item name="android:gravity">center|center_vertical</item>
    </style>

    <style name="buttonSecondary">
        <item name="android:height">@dimen/big_button_height</item>
        <item name="android:width">@dimen/big_button_width</item>
        <item name="android:background">@drawable/rounded_button_white</item>
        <item name="android:textColor">@color/generalText</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">@dimen/button_padding_start</item>
        <item name="android:paddingEnd">@dimen/button_padding_end</item>
        <item name="android:drawableEnd">@drawable/ic_arrow</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="searchInput">
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:textColorHint">@color/secondaryText</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

</resources>